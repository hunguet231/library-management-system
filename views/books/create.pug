block content
  h1.text-center Create Book
  .container.align-content
    form(method="POST", action="/books/create")
      .form-group
        span Title
        input.form-control(type="text", name="title")
      .form-group
        span Description
        textarea.form-control(name="description", rows="3", cols="22")
