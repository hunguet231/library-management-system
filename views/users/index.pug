extends ../layouts/common

block content
  h1.text-center Users List
  .container.align-content
    form(method="GET", action="/users/search").form-inline
      .form-group
        input(type="text", name="q", size="60", value= value).form-control
        |
        |
        button.btn.btn-info Search
    a(href="/users/create") 
      button.btn-sm.btn.btn-success Create user
    table.table.table-hover
      thead
        tr
          th(colspan='2').text-center User
          th(colspan='3').text-center Action
      tbody
      each user in users
        tr
          if users.length
            td(colspan='2')
              img(src= user.avatar, width='42', style= 'border-radius: 50%')
              |
              |
              span= user.name
            td(colspan='3').action
              a(href=`/users/${user._id}/view`).btn.btn-sm.btn-info View
              a(href=`/users/${user._id}/edit`).btn.btn-sm.btn-warning Edit
              a(href=`/users/${user._id}/delete`).btn.btn-sm.btn-danger Delete
          else
            td No user!