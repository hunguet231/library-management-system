extends ../layouts/common
block content
    h1.text-center Login
    .container.align-content
      if errors
        each error in errors
          .alert.alert-danger= error
      form(method="POST", action="/auth/login")
        .form-group
          span Email
          input.form-control(type="text", name="email", value = values ? values.email : "")
        .form-group
          span Password
          input.form-control(type="text", name="password", value = values ? values.password : "" )
          br
          button.btn.btn-success Login
          p Don't have an account ? 
            span Register 
            span 
              a(href="/auth/register") here
      a(href="/")
        button.btn.btn-default.btn-sm < Go back
