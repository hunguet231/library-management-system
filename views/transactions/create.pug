extends ../layouts/common
block content
  h1.text-center Borrow Books
  .container.align-content
    form(method="POST", action="/transactions/create")
      .form-group
        label(for="name") Name: 
        select(id="name", name="user").form-control
          each user in users
            option(value=user.name)= user.name
      .form-group
        label(for="book") Book: 
        select(id="book", name="book").form-control
          each book in books
            option(value=book.title)= book.title
      .form-group
          label(for="time") Time: 
          input(type="date", name ="dateBorrow").form-control
      button.btn.btn-primary Borrow
    br
    a(href="/transactions")
      button.btn.btn-default < Go back
